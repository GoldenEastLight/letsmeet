<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	
<mapper namespace = "com.anjanda.letsmeet.repository.mapper.ImageMapper">

	<!-- C :: 이미지 추가 -->
	<insert id="insertImage" parameterType="image">
	insert into image
		(i__id, i_name, i_username, i_path)
	values
		(#{iId}, #{iName}, #{iUserName}, #{iPath});
	</insert>

	<!-- U :: 유저 프로필사진 업데이트 -->
	<update id="updateProfile" parameterType="user">
	update user
	   set u_image=#{uImage}
	 where u_email=#{uEmail}
	</update>
	
	<!-- R :: 이미지 조회 -->
	<select id="selectImageList" parameterType="image" resultType="image">
		select *
		  from image
		 where i_type=#{iType}
	</select>
</mapper>